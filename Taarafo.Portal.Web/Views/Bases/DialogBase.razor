@using Syncfusion.Blazor.Popups

<SfDialog @bind-Visible=@IsVisible
          ShowCloseIcon=true
          IsModal=true
          AllowDragging=true
          Width=@Width>
    <DialogTemplates>
        <Header>@Title</Header>
        <Content>@Content</Content>
    </DialogTemplates>
    <DialogButtons>
        <DialogButton Content="OK" 
                      IsPrimary=true
                      OnClick=@Click />
    </DialogButtons>
</SfDialog>